                    legend Personal information:
                    |         First Name:
                    input(type='text', name='firstname', required='')
                    |         Last Name:
                    input(type='text', name='lastname', required='')

                    br
                br
                |     Programming Languages:
                input(type='text', name='languages', textarea='', rows='4', cols='50', required='')
